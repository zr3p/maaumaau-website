---
interface Props {
  title: string;
  description: string;
  keywords?: string;
  image?: string;
  canonicalURL?: string;
  schema?: any;
}

const {
  title,
  description,
  keywords = "cat sitting, pet care, Manchester, Salford, cat sitter, pet sitting",
  image = "https://maaumaau.co.uk/cat-less-maau.svg",
  canonicalURL = Astro.url.href,
  schema,
} = Astro.props;

import Analytics from "../components/Analytics.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="MAAU MAAU" />
    <meta property="og:locale" content="en_GB" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/cat-less-maau.svg" />

    <!-- Preload Critical Resources -->
    <link
      rel="preload"
      href="/Barrio-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/RobotoMono-VariableFont_wght.ttf"
      as="font"
      type="font/truetype"
      crossorigin
    />

    <!-- JSON-LD Schema -->
    {
      schema && (
        <script type="application/ld+json" set:html={JSON.stringify(schema)} />
      )
    }

    <!-- Analytics -->
    <Analytics />

    <style is:global>
      /* Custom Font - Barrio */
      @font-face {
        font-family: "Barrio";
        src: url("/Barrio-Regular.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
      }

      /* Custom Font - Roboto Mono Variable */
      @font-face {
        font-family: "Roboto Mono";
        src: url("/RobotoMono-VariableFont_wght.woff2") format("woff2");
        font-weight: 100 700;
        font-style: normal;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --bg-primary: #f8f6f0;
        --bg-secondary: #ffffff;
        --text-primary: #2a2a2a;
        --text-secondary: #666666;
        --accent-primary: #2a2a2a;
        --accent-secondary: #666666;
      }

      [data-theme="dark"] {
        --bg-primary: #1a1a1a;
        --bg-secondary: #2a2a2a;
        --text-primary: #f8f6f0;
        --text-secondary: #cccccc;
        --accent-primary: #f8f6f0;
        --accent-secondary: #cccccc;
      }

      body {
        font-family: "Roboto Mono", monospace;
        background: var(--bg-primary);
        color: var(--text-primary);
        transition: all 0.3s ease;
        overflow-x: hidden;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      .logo {
        font-family: "Barrio", cursive;
      }

      /* Navigation */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        backdrop-filter: blur(20px);
        background: rgba(248, 246, 240, 0.9);
      }

      [data-theme="dark"] .nav {
        background: rgba(26, 26, 26, 0.9);
      }

      .logo {
        font-size: 1.8rem;
        font-weight: 900;
        color: var(--text-primary);
        text-decoration: none;
        letter-spacing: -0.02em;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
        align-items: center;
      }

      .nav-links a {
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
      }

      .nav-links a:hover {
        opacity: 0.6;
      }

      .theme-toggle {
        background: none;
        border: 1px solid var(--text-primary);
        color: var(--text-primary);
        border-radius: 20px;
        padding: 0.3rem 0.8rem;
        cursor: pointer;
        font-size: 0.8rem;
        transition: all 0.3s ease;
      }

      .theme-toggle:hover {
        background: var(--text-primary);
        color: var(--bg-primary);
      }

      /* Fixed CTA Button */
      .fixed-cta {
        position: fixed;
        top: 50%;
        right: 2rem;
        transform: translateY(-50%);
        z-index: 9999;
        writing-mode: vertical-rl;
        text-orientation: mixed;
      }

      .fixed-cta .btn {
        padding: 1.5rem 0.8rem;
        background: var(--text-primary);
        color: var(--bg-primary);
        text-decoration: none;
        font-weight: 700;
        font-size: 0.9rem;
        letter-spacing: 0.1em;
        border-radius: 25px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        border: 2px solid var(--text-primary);
        display: block;
      }

      .fixed-cta .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.4);
        background: var(--bg-primary);
        color: var(--text-primary);
      }

      /* Hero Section */
      .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 2rem;
        position: relative;
      }

      .hero-content {
        max-width: 900px;
        z-index: 2;
      }

      .hero-title {
        font-size: clamp(3rem, 12vw, 10rem);
        font-weight: 900;
        line-height: 0.85;
        margin-bottom: 2rem;
        letter-spacing: -0.04em;
        color: var(--text-primary);
      }

      .hero-subtitle {
        font-size: clamp(1rem, 2.5vw, 1.5rem);
        font-weight: 400;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.4;
      }

      .hero-location {
        font-size: clamp(0.8rem, 1.5vw, 1rem);
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 600;
        margin-bottom: 3rem;
      }

      .hero-cta {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .btn {
        padding: 1rem 2rem;
        border: 2px solid var(--text-primary);
        background: transparent;
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
        cursor: pointer;
      }

      .btn-primary {
        background: var(--text-primary);
        color: var(--bg-primary);
      }

      .btn:hover {
        background: var(--text-primary);
        color: var(--bg-primary);
      }

      .btn-primary:hover {
        background: transparent;
        color: var(--text-primary);
      }

      /* Cat Illustrations */
      .cat-illustrations {
        position: absolute;
        width: 100vw;
        height: 100vh;
        top: 0;
        left: 0;
        pointer-events: none;
        overflow: hidden;
        background-image: url("/cat-less-maau.svg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        opacity: 0.25;
        transition: filter 0.3s ease;
      }

      [data-theme="dark"] .cat-illustrations {
        filter: invert(1);
      }

      /* Services Section */
      .services {
        padding: 8rem 0;
        background: var(--bg-secondary);
        position: relative;
      }

      .services-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 2rem;
        text-align: center;
      }

      .services h2 {
        font-size: clamp(2rem, 6vw, 4rem);
        font-weight: 900;
        margin-bottom: 4rem;
        color: var(--text-primary);
        letter-spacing: -0.02em;
      }

      .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
      }

      .service-card {
        background: var(--bg-primary);
        border: 2px solid var(--text-primary);
        padding: 2.5rem;
        text-align: left;
        transition: all 0.3s ease;
      }

      .service-card:hover {
        background: var(--text-primary);
        color: var(--bg-primary);
      }

      .service-card h3 {
        font-size: 1.5rem;
        font-weight: 900;
        margin-bottom: 1rem;
        letter-spacing: 0.05em;
      }

      .service-time {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      .service-features {
        list-style: none;
      }

      .service-features li {
        margin-bottom: 0.5rem;
        padding-left: 1rem;
        position: relative;
      }

      .service-features li::before {
        content: "â†’";
        position: absolute;
        left: 0;
        font-weight: bold;
      }

      /* About Section */
      .about {
        padding: 8rem 0;
        background: var(--bg-primary);
        text-align: center;
      }

      .about-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      .about h2 {
        font-size: clamp(2rem, 6vw, 4rem);
        font-weight: 900;
        margin-bottom: 3rem;
        color: var(--text-primary);
        letter-spacing: -0.02em;
      }

      .about p {
        font-size: clamp(1rem, 2vw, 1.3rem);
        color: var(--text-secondary);
        margin-bottom: 2rem;
        line-height: 1.6;
      }

      /* Contact Section */
      .contact {
        padding: 8rem 0;
        background: var(--bg-secondary);
        text-align: center;
      }

      .contact-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      .contact h2 {
        font-size: clamp(2rem, 6vw, 4rem);
        font-weight: 900;
        margin-bottom: 2rem;
        color: var(--text-primary);
        letter-spacing: -0.02em;
      }

      .contact p {
        font-size: clamp(1rem, 2vw, 1.3rem);
        color: var(--text-secondary);
        margin-bottom: 3rem;
      }

      .contact-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      /* Mobile Responsive */
      @media (max-width: 768px) {
        .nav-links {
          display: none;
        }

        .hero {
          padding: 1rem;
        }

        .hero-cta {
          flex-direction: column;
          align-items: center;
        }

        .btn {
          width: 200px;
        }

        .cat-illustrations {
          opacity: 0.15;
          background-size: 150% auto;
        }

        .fixed-cta {
          display: none;
        }
      }

      /* Blog Styles - Add these to BaseLayout.astro <style is:global> section */

      /* Blog Post Layout */
      .blog-post-main {
        padding: 8rem 2rem 4rem;
        max-width: 800px;
        margin: 0 auto;
      }

      .blog-container {
        width: 100%;
      }

      .back-link {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
        display: inline-block;
        margin-bottom: 2rem;
      }

      .back-link:hover {
        color: var(--text-primary);
      }

      .blog-hero-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 2rem;
        border: 2px solid var(--text-primary);
      }

      .blog-post-title {
        font-family: "Barrio", cursive;
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1rem;
        color: var(--text-primary);
      }

      .blog-post-date {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-secondary);
        display: block;
        margin-bottom: 3rem;
      }

      .blog-content {
        margin: 2rem 0;
        line-height: 1.6;
        color: var(--text-primary);
      }

      /* Blog Content Markdown Styles */
      .blog-content h1,
      .blog-content h2,
      .blog-content h3 {
        font-family: "Barrio", cursive;
        font-weight: 900;
        color: var(--text-primary);
        margin: 2rem 0 1rem;
      }

      .blog-content h2 {
        font-size: 1.8rem;
      }

      .blog-content h3 {
        font-size: 1.4rem;
      }

      .blog-content p {
        margin-bottom: 1.5rem;
      }

      .blog-content ul,
      .blog-content ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
      }

      .blog-content li {
        margin-bottom: 0.5rem;
      }

      .blog-content strong {
        font-weight: 700;
      }

      .blog-content a {
        color: var(--text-primary);
        text-decoration: underline;
        font-weight: 600;
      }

      .blog-content a:hover {
        opacity: 0.7;
      }

      /* Blog Mobile Responsive */
      @media (max-width: 768px) {
        .blog-post-main {
          padding: 6rem 1rem 2rem;
        }

        .blog-hero-image {
          height: 200px;
        }
      }

      /* Added with Nyx for footer */
      .footer {
        display: flex;
        justify-content: space-between;
        background-color: #000; /* black */
        padding: 1.5rem 2rem;
        color: #fff;
        font-family: "Roboto Mono", monospace;
        font-weight: 600;
        font-size: 0.9rem;
      }

      .footer a {
        color: #fff;
        text-decoration: none;
        margin-right: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: opacity 0.3s ease;
      }

      .footer a:last-child {
        margin-right: 0;
      }

      .footer a:hover {
        opacity: 0.6;
      }

      .footer-nav-left,
      .footer-nav-right {
        display: flex;
        gap: 1.5rem;
      }
    </style>

    <!-- Sitemap discovery -->
    <link
      rel="sitemap"
      type="application/xml"
      title="Sitemap"
      href="/sitemap-index.xml"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
