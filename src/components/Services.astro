---
// src/components/Services.astro
import ServicePrice from "./ServicePrice.astro";
---

<!-- Services Section -->
<section class="services" id="services">
    <div class="services-container">
        <h2>OUR CAT SITTING SERVICES</h2>
        <div class="services-grid">
            <div class="service-card">
                <h3>QUICK VISIT</h3>
                <p>
                    Perfect for busy days when your cat needs a check-in and
                    some company.
                </p>
                <div class="service-time">30 minutes</div>
                <ul class="service-features">
                    <li>30 minute visit</li>
                    <li>Food & water refresh</li>
                    <li>Litter box maintenance</li>
                    <li>Playtime & cuddles</li>
                    <li>Photo updates</li>
                </ul>
            </div>

            <div class="service-card">
                <h3>MORNING & EVENING VISITS</h3>
                <p>
                    Comprehensive daily care with two visits to maintain your
                    cat's routine.
                </p>
                <div class="service-time">2 visits per day</div>
                <ul class="service-features">
                    <li>2 visits per day, 30 minutes each</li>
                    <li>
                        Morning & evening feeding, we'll arrange times together
                    </li>
                    <li>Extended playtime</li>
                    <li>Litter maintenance</li>
                    <li>Daily photo & text updates</li>
                    <li>Plant watering</li>
                </ul>
            </div>

            <div class="service-card">
                <h3>OVERNIGHT STAY</h3>
                <p>
                    Premium overnight care for cats who need extra attention and
                    companionship.
                </p>
                <div class="service-time">Up to 8 hours</div>
                <ul class="service-features">
                    <li>Overnight companionship</li>
                    <li>Multiple feeding times</li>
                    <li>Extended play & cuddle time</li>
                    <li>Home security presence</li>
                    <li>Plant watering</li>
                    <li>Detailed daily reports and photosx</li>
                </ul>
            </div>

            <div class="service-card">
                <h3>EXTRA CARE</h3>
                <p>
                    Additional services to keep your cat happy and your home
                    maintained while you're away.
                </p>
                <div class="service-time">Add-on services</div>
                <ul class="service-features">
                    <li>Extended visit time</li>
                    <li>Medication administration</li>
                    <li>Multiple cats</li>
                    <li>Early/late visits</li>
                    <li>Key collection/return</li>
                    <li>Custom requests</li>
                </ul>
                <ServicePrice price="From Â£4" />
            </div>
        </div>
    </div>
</section>
