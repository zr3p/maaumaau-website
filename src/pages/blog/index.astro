---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
---

<BaseLayout title="Cat Chat Corner | MAAU MAAU" description="Manchester's premier cat care blog with tips, stories, and local insights.">
  <main class="max-w-4xl mx-auto px-6 py-16">
    
    <div class="text-center mb-16">
      <h1 class="text-6xl md:text-8xl font-black mb-4 font-['Barrio']">Cat Chat Corner</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">Where Manchester's cat stories come to life</p>
    </div>
    
    <div class="space-y-8">
      {posts.map((post) => (
        <article class="group border-2 border-gray-900 dark:border-gray-100 bg-white dark:bg-gray-900 hover:bg-gray-900 hover:text-white dark:hover:bg-white dark:hover:text-gray-900 transition-all duration-300">
          <a href={`/blog/${post.slug}/`} class="block p-8">
            <h2 class="text-2xl font-black font-['Barrio'] mb-3">{post.data.title}</h2>
            <p class="text-gray-600 group-hover:text-gray-300 dark:text-gray-400 dark:group-hover:text-gray-600 mb-4">{post.data.description}</p>
            <time class="text-sm font-semibold uppercase tracking-wider">{post.data.publishDate.toLocaleDateString()}</time>
          </a>
        </article>
      ))}
    </div>
    
  </main>
</BaseLayout>