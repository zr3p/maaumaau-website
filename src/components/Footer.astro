---
const currentYear = new Date().getFullYear();
---

<footer
  <footer
  class="bg-footer-bg text-footer-text font-mono font-semibold px-4 py-6 md:px-8 md:py-6"
>
  <!-- Main navigation container -->
  <div class="flex flex-col gap-6">
    <!-- Top row - navigation links -->
    <div
      class="flex flex-col md:flex-row md:flex-wrap gap-4 md:gap-6 justify-between"
    >
      <!-- Left navigation -->
      <nav class="flex flex-wrap gap-4 md:gap-6">
        <a
          href="/#services"
          class="text-sm uppercase tracking-wider hover:opacity-60 transition-opacity whitespace-nowrap"
          >Services</a
        >
        <a
          href="/#about"
          class="text-sm uppercase tracking-wider hover:opacity-60 transition-opacity whitespace-nowrap"
          >About</a
        >
        <a
          href="/blog"
          class="text-sm uppercase tracking-wider hover:opacity-60 transition-opacity whitespace-nowrap"
          >Blog</a
        >
        <a
          href="/#contact"
          class="text-sm uppercase tracking-wider hover:opacity-60 transition-opacity whitespace-nowrap"
          >Contact</a
        >
      </nav>

      <!-- Right navigation -->
      <nav class="flex flex-wrap gap-4 md:gap-6">
        <a
          href="/terms"
          class="text-sm uppercase tracking-wider hover:opacity-60 transition-opacity whitespace-nowrap"
          >Terms</a
        >
        <a
          href="/privacy"
          class="text-sm uppercase tracking-wider hover:opacity-60 transition-opacity whitespace-nowrap"
          >Privacy</a
        >
      </nav>
    </div>

    <!-- Copyright text - always full width below navigation -->
    <p class="text-xs text-center md:text-left opacity-80 mt-2 md:mt-0">
      © 2019–{currentYear} Maau Maau Ltd. All rights reserved.
    </p>
  </div>
</footer>
