---
// src/components/BlogCard.astro
export interface Props {
    title: string;
    description: string;
    slug: string;
    publishDate: Date;
}

const { title, description, slug, publishDate } = Astro.props;
---

<article class="blog-card">
    <a href={`/blog/${slug}/`} class="block p-8">
        <h2 class="text-2xl font-black font-['Barrio'] mb-3">{title}</h2>
        <p class="blog-description mb-4">{description}</p>
        <time class="text-sm font-semibold uppercase tracking-wider">
            {publishDate.toLocaleDateString()}
        </time>
    </a>
</article>

<style>
    .blog-card {
        border: 2px solid var(--text-primary);
        background: var(--bg-secondary);
        color: var(--text-primary);
        transition: all 0.3s ease;
    }

    .blog-card:hover {
        background: var(--text-primary);
        color: var(--bg-primary);
    }

    .blog-description {
        color: var(--text-secondary);
    }

    .blog-card:hover .blog-description {
        color: var(--bg-primary);
        opacity: 0.8;
    }
</style>
